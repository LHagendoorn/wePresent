<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="wepresent.wepresent.RegisterActivity"
    android:background="#ff65a73a">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:width="300dp"
        android:background="#ff0f8c07"
        android:height="50dp"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/userName"
        android:background="#ffffff"
        android:width="300dp"
        android:height="50dp"
        android:textSize="25dp"
        android:textColorHint="#8d7f7f7f"
        android:textColor="#ff000000"
        android:hint="Username"
        android:paddingLeft="15dp"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passWord"
        android:background="#ffffff"
        android:width="300dp"
        android:textColor="#ff000000"
        android:textColorHint="#8d7f7f7f"
        android:hint="Password"
        android:textSize="25dp"
        android:fontFamily="@string/loginText"
        android:paddingLeft="15dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/verPass"
        android:background="#ffffff"
        android:width="300dp"
        android:textColor="#ff000000"
        android:textColorHint="#8d7f7f7f"
        android:hint="Verify Password"
        android:textSize="25dp"
        android:fontFamily="@string/loginText"
        android:paddingLeft="15dp"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="72dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:layout_below="@+id/userName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:background="#ffffff"
        android:fontFamily="@string/loginText"
        android:hint="e-Mail"
        android:textColorHint="#8d7f7f7f"
        android:textColor="#ff000000"
        android:width="300dp"
        android:textSize="25dp"
        android:paddingLeft="15dp"
        android:height="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="User Name is already in use!"
        android:id="@+id/UsedUN"
        android:layout_below="@+id/userName"
        android:layout_alignStart="@+id/userName"
        android:textColor="#ffff2711"
        android:textSize="20dp"
        android:paddingLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Passwords do not match!"
        android:id="@+id/NoPassMatch"
        android:textColor="#ffff2711"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:layout_alignBottom="@+id/verPass"
        android:layout_alignStart="@+id/verPass"
        android:layout_marginBottom="-25dp"
        android:layout_marginLeft="15dp" />

</RelativeLayout>
