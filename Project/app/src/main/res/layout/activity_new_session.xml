<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wepresent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".SessionManagementActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Create Session"
        android:id="@+id/uSession"
        android:onClick="update"
        android:width="100dp"
        android:height="50dp"
        android:background="#ff0f8c07"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sSpinner"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/hintSlide"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:hint="Enter a title"
        android:textColorHint="#8d7f7f7f" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qSpinner"
        android:spinnerMode="dropdown"
        android:layout_above="@+id/uSession"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="109dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select a Slide Set"
        android:id="@+id/textView2"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/hintSlide"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select a Quiz Set"
        android:id="@+id/textView3"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/sSpinner" />

</RelativeLayout>