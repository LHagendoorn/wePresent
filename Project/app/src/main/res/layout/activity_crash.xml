<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="wepresent.wepresent.CrashActivity"
    android:id="@+id/crashunit">

    <TextView android:text="@string/oei" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hashtagoei"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="This app will explode in: "
        android:id="@+id/countdown"
        android:layout_below="@+id/hashtagoei"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp" />

</RelativeLayout>
