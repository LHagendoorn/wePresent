<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="wepresent.wepresent.QuizView"
    android:id="@+id/">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/questionText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:fontFamily="@string/loginText"
        android:textColor="#ff000000" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/optionA"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/questionText"
        android:layout_alignParentStart="true"
        android:background="#ff0f8c07"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:text="A"
        android:onClick="pressed" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="B"
        android:id="@+id/optionB"
        android:layout_below="@+id/optionA"
        android:layout_alignParentEnd="true"
        android:background="#ff0f8c07"
        android:layout_marginTop="10dp"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:onClick="pressed"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="C"
        android:id="@+id/optionC"
        android:background="#ff0f8c07"
        android:layout_below="@+id/optionB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#ff000000"
        android:onClick="pressed"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:id="@+id/optionD"
        android:background="#ff0f8c07"
        android:layout_below="@+id/optionC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#ff000000"
        android:textSize="25dp"
        android:onClick="pressed"/>

</RelativeLayout>
