<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wepresent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".SessionManagementActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/updateSessionButton"
        android:id="@+id/uSession"
        android:onClick="update"
        android:width="140dp"
        android:height="50dp"
        android:background="#ff0f8c07"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/title"
        android:background="#ffffff"
        android:width="300dp"
        android:height="40dp"
        android:textSize="25dp"
        android:textColorHint="#8d7f7f7f"
        android:textColor="#ff000000"
        android:paddingLeft="15dp"
        android:maxLines="1"
        android:maxHeight="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Title"
        android:editable="true"
        android:clickable="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sSpinner"
        android:layout_below="@+id/hintSlide"
        android:layout_alignParentStart="true"
        android:spinnerMode="dropdown" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hintSlide"
        android:text="Select slides for this session"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hintQuestion"
        android:text="Select questions for this session"
        android:layout_centerVertical="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qSpinner"
        android:layout_below="@+id/hintQuestion"
        android:layout_alignParentStart="true"
        android:spinnerMode="dropdown" />

</RelativeLayout>