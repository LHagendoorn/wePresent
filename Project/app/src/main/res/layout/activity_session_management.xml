<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wepresent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff65a73a"
    tools:context=".MainActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registerText"
        android:id="@+id/register"
        android:onClick="gotoRegister"
        android:width="140dp"
        android:background="#ff0f8c07"
        android:textSize="20dp"
        android:height="50dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginRight="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/sName"
        android:layout_marginBottom="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginText"
        android:id="@+id/login"
        android:onClick="proceedLogin"
        android:width="140dp"
        android:height="50dp"
        android:background="#ff0f8c07"
        android:textSize="20dp"
        android:layout_alignTop="@+id/register"
        android:layout_alignEnd="@+id/sessionList" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/sName"
        android:background="#ffffff"
        android:width="300dp"
        android:height="40dp"
        android:textSize="25dp"
        android:textColorHint="#8d7f7f7f"
        android:textColor="#ff000000"
        android:hint="Username"
        android:paddingLeft="15dp"
        android:maxLines="1"
        android:maxHeight="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/sessionList"
        android:choiceMode="singleChoice"
        android:listSelector="#666666"
        android:background="#ffffff"
        android:layout_above="@+id/listView"
        android:layout_alignStart="@+id/sName" />

    <ListView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/listView"
        android:choiceMode="singleChoice"
        android:listSelector="#666666"
        android:background="#ffffff"
        android:layout_above="@+id/register"
        android:layout_alignEnd="@+id/login"
        android:layout_marginBottom="39dp" />

</RelativeLayout>